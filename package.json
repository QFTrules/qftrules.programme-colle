{
  "name": "programme-de-colle",
  "displayName": "Programme de colle",
  "description": "Affiche le programme de colle",
  "version": "0.0.1",
  "publisher": "QFTrules",
  "icon": "images/prog_colle.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onView:${package-explorer}"],
  "main": "./extension.js",
  "contributes": {

    "viewsWelcome": [
      {
        "view": "suggestions",
        "contents": "Voici les activités suggérées.\n[Indiquer la difficulté des exercices suivants](command:fetch.exo)"
      }],

    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",        
          "title": "Physique",
          "icon": "images/atom2.png"               
        }
      ]
    },

    "keybindings": [
      {
        "command": "workbench.view.extension.package-explorer",
        "key": "ctrl+shift+p",
        "when": "editorTextFocus"
      }
    ],

    "views": {
      "package-explorer": [               
        {
          "id": "programme-colle",  
          "name": "Programme de colle",
          "type": "tree",
          "icon" : "images/default_folder_opened.svg"
        },
        {
          "id": "package-banque",
          "name": "Banque d'exercices",
          "type": "tree",
          "icon" : "images/default_folder_opened.svg"
        },
        {
          "id": "suggestions",
          "name": "Suggestions",
          "type": "tree"
        }
      ]
    },

    "commands": [{
      "command": "test.colle",
      "title": "Programme de colle"
    },
    {
      "command": "upload.colle",
      "icon": "$(cloud-upload)",
      "title": "Téléverser"
    },
    {
      "command": "do.nothing",
      "icon": "$(refresh)",
      "title": "Téléversement en cours"
    },
    {
      "command": "build.colle",
      "icon": "$(gear)",
      "title": "Compiler et téléverser"
    },
    {
      "command": "compile.colle",
      "icon": "$(file-code)",
      "title": "Compiler"
    },
    {
      "command": "goto.exo",
      "title": "Ouvrir exercice"
    },
    {
      "command": "copy.exo",
      "title": "Ajouter",
      "icon": "$(clippy)"
    },
    {
      "command": "open.latex",
      "title": "Ajouter",
      "icon": "$(clippy)"
    },
    {
      "command": "programme-colle.refresh",
      "title": "Rafraîchir",
      "icon": "$(refresh)"
    }
  ],
    
    "menus": {
      "view/item/context": [
          {
              "command": "copy.exo",
              "when": "view == package-banque && viewItem == file",
              "group": "inline"
          },
          {
              "command": "open.latex",
              "when": "view == package-banque && viewItem == chapter",
              "group": "inline"
          }
        ],
      "view/title": [
        {
          "command": "upload.colle",
          "when": "view == programme-colle && static",
          "group": "navigation@1"
        },
        {
          "command": "do.nothing",
          "when": "view == programme-colle && !static",
          "group": "navigation@1"
        },
        {
          "command": "compile.colle",
          "when": "view == programme-colle",
          "group": "navigation@2"
        },
        {
          "command": "build.colle",
          "when": "view == programme-colle",
          "group": "navigation@3"
        },
        {
          "command": "programme-colle.refresh",
          "when": "view == programme-colle",
          "group": "navigation@4"
        }]
    },
    

    "configuration": {
      "title": "Programme de colle",
      "properties": {
        "Programme-de-colle.collepath": {
          "type": "string",
          "default": "/home/eb/Dropbox/CPGE/Physique/Exercices/Colles/PC/",
          "description": "Définit le chemin d'accès vers le dossier de colles."
        }
        ,
        "Programme-de-colle.stypath": {
            "type": "string",
            "default": "/home/eb/Dropbox/texmf/tex/latex/Preambles/",
            "description": "Définit le chemin d'accès vers le préambule latex colle.sty."
        }
        ,
        "Programme-de-colle.Python-command": {
            "type": "string",
            "default": "/home/eb/anaconda3/bin/python3",
            "description": "Définit la commande python à utiliser. La bibliothèque python selenium est utilisée pour téléverser le programme de colle sur Cahier de Prépa."
        }
        ,
        "Programme-de-colle.Programme-balise": {
            "type": "string",
            "default": "\\ProgrammeColle",
            "description": "Définit la balise latex qui situe la partie du document au programme."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
